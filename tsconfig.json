{
    "compilerOptions": {
      "baseUrl": ".",
      "declaration": true,
      "outDir": "build",
      "module": "commonjs",
      "target": "es5",
      "sourceMap": true,
      "strict": true,
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "importHelpers": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }
